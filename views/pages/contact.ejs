<!doctype html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <%- include('../partials/header') %>

    <main class="mx-auto max-w-5xl px-4 py-10 sm:px-6 lg:px-8">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Contact</h1>
      <p class="mt-4 text-lg text-gray-600">Send us a message using the form below.</p>

      <% if (sent) { %>
        <div class="mt-4 rounded-lg border border-green-200 bg-green-50 p-4 text-sm text-green-800">
          Message sent (demo). In a real app you would email/store it.
        </div>
      <% } %>

      <% if (error) { %>
        <div class="mt-4 rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-800">
          <strong class="font-semibold">Form error:</strong> <%= error %>
        </div>
      <% } %>

      <form class="mt-8 space-y-6 rounded-xl border border-gray-200 bg-white p-6 shadow-sm" method="POST" action="/contact">
        <div>
          <label for="name" class="block text-sm font-semibold text-gray-900">Name</label>
          <input
            id="name"
            class="mt-2 block w-full rounded-lg border border-gray-300 px-3.5 py-2 text-gray-900 shadow-sm placeholder:text-gray-400 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none sm:text-sm"
            name="name"
            type="text"
            value="<%= form?.name || '' %>"
            required
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-semibold text-gray-900">Email</label>
          <input
            id="email"
            class="mt-2 block w-full rounded-lg border border-gray-300 px-3.5 py-2 text-gray-900 shadow-sm placeholder:text-gray-400 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none sm:text-sm"
            name="email"
            type="email"
            value="<%= form?.email || '' %>"
            required
          />
        </div>

        <div>
          <label for="message" class="block text-sm font-semibold text-gray-900">Message</label>
          <textarea
            id="message"
            class="mt-2 block w-full rounded-lg border border-gray-300 px-3.5 py-2 text-gray-900 shadow-sm placeholder:text-gray-400 focus:border-primary focus:ring-2 focus:ring-primary/20 focus:outline-none sm:text-sm"
            name="message"
            rows="6"
            required
          ><%= form?.message || '' %></textarea>
        </div>

        <button
          type="submit"
          class="inline-flex items-center rounded-lg bg-primary px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary/20"
        >
          Send
        </button>
      </form>

      <section class="mt-8 rounded-xl border border-gray-200 bg-white shadow-sm">
        <div class="p-6">
          <h2 class="text-lg font-semibold text-gray-900">Contact details</h2>
          <p class="mt-2 text-sm text-gray-600">
            Phone: <a class="text-primary hover:underline" href="tel:<%= site.phone %>"><%= site.phone %></a><br />
            Email: <a class="text-primary hover:underline" href="mailto:<%= site.email %>"><%= site.email %></a>
          </p>
        </div>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
